<UserControl x:Class="CoffeeManagement.AdminAllOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoffeeManagement"
             Background="#FAFAFA"
             MinWidth="900" MinHeight="600">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======= Bộ lọc ======= -->
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="📜 Lịch sử đơn hàng (Admin)"
                       FontSize="20" FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                <TextBlock Text="Khách hàng:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CustomerFilter"
                          Width="180"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectionChanged="Filter_Changed"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="Từ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="FromDatePicker" SelectedDateChanged="Filter_Changed"/>

                <TextBlock Text="Đến:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <DatePicker x:Name="ToDatePicker" SelectedDateChanged="Filter_Changed"/>
            </StackPanel>

            <Button Content="🔍 Làm mới"
                    Click="BtnRefresh_Click"
                    Margin="20,0,0,0"
                    Padding="10,4"
                    Background="#007ACC" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- ======= Danh sách đơn hàng ======= -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
            <ItemsControl x:Name="OrdersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="8"
                                Padding="10" Margin="6" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Id, StringFormat='Đơn #{0}'}"
                                               FontWeight="Bold" FontSize="14"/>

                                    <TextBlock Text="{Binding CreatedAt, StringFormat='Ngày tạo: {0:dd/MM/yyyy HH:mm}'}"
                                               Grid.Column="1"
                                               FontSize="12" Foreground="Gray"/>
                                </Grid>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding Customer.LastName, StringFormat='Khách: {0}'}"
                                           FontSize="13" Margin="0,5,0,0"/>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0" >
                                    <TextBlock Text="{Binding TotalAmount, StringFormat='Tổng tiền: {0:C0}'}"
                                               FontWeight="Bold" Foreground="Green"/>

                                    <TextBlock Text="{Binding Status}"
                                               Foreground="DarkSlateBlue"
                                               Margin="20,0,0,0"/>

                                    <Button Content="Chi tiết"
                                            Click="BtnViewDetails_Click"
                                            Margin="10,0,0,0"
                                            Padding="6,3"
                                            Background="#FF6F00" Foreground="White"
                                            BorderThickness="0" Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
